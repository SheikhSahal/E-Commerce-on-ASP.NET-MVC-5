@model List<FYP.Models.AP_Menu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/newdashboard.cshtml";
}

<div class="row m-t-30" style="margin-top:70px;">
    <div class="col-md-12">
        <!-- DATA TABLE-->
        <div class="container">
            <div class="table-responsive m-b-40" style="height:100vh;">
                <br />
                <h2>Users</h2>
                <table class="table table-borderless table-data3" style="margin-top:50px;">
                    <thead>
                        <tr>
                            <th>S.No</th>
                            <th>User Name</th>
                            <th>User Email</th>
                            <th>User Contact</th>
                            <th>Last login</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{int RowNo = 0;}
                        @foreach (var s in ViewBag.userrcd as List<FYP.Models.Ads>)
                          {
                            <tr>
                                <td>@{RowNo++;} @RowNo</td>
                                <td>@s.User_name</td>
                                <td>@s.user_email</td>
                                <td>@s.User_contact</td>
                                <td>@s.Last_login</td>
                                <td class="cond">@s.User_active</td>
                            </tr>

                           } 
                    </tbody>
                </table>
            </div>
            <!-- END DATA TABLE-->
        </div>

    </div>
</div>

