                $(this).html('<div style="height:20px; width:20px; background-color:red; border-radius:50%;"> </div>');
            }
            else {
                $(this).html('<div style="height:20px; width:20px; background-color:green; border-radius:50%;"> </div>');
            }
        });
    });
</script>
