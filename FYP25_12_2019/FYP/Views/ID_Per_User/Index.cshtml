                            @Model.ads.Make
                        </div>
                        <div class="col-xs-3 font">
                            Condition
                        </div>
                        <div class="col-xs-3 font cond">
                            @Model.ads.Condition
                        </div>
                    </div>
                </div>

                <hr />


                <div class="col-md-12">
                    <div class="row">
                        <h2 class="font">Description</h2>
                        <br />

                        <p class="font">
                        @Model.ads.P_Desc
                        </p>
                        

                    </div>

                   
                        
                          


                </div>

            </div>

        </div>
    </div>
</div>

